    <style name="CustomCheckBox" parent="Base.Theme.MaterialComponents.Light">
        <item name="colorControlNormal">?attr/secondaryBackground</item>
        <item name="colorControlActivated">?attr/colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomButton" parent="Base.Theme.MaterialComponents.Light">
        <item name="buttonTint">?attr/colorAccent</item>
        <item name="background">?attr/colorAccent</item>
    </style>

    <style name="CustomScrollView" parent="android:Widget.ScrollView">
        <item name="android:overScrollMode">never</item>
        <item name="android:fadingEdge">none</item>
    </style>

    <style name="CustomListView" parent="android:Widget.ListView">
        <item name="android:overScrollMode">never</item>
        <item name="android:fadingEdge">none</item>
    </style>
