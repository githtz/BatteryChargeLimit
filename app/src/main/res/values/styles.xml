    <style name="CustomAlertDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:colorPrimary">?attr/colorAccent</item>
        <item name="colorPrimary">?attr/colorAccent</item>
        <item name="android:colorPrimaryDark">?attr/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:buttonTint">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:colorAccent">@color/colorAccent</item>-->
        <item name="android:textColor">?attr/primaryText</item>
        <item name="android:textColorPrimary">@color/primary_text_color_selector</item>
        <item name="android:textColorSecondary">?attr/secondaryText</item>
        <item name="textColorAlertDialogListItem">?attr/primaryText</item>
        <item name="android:background">?attr/cardColor</item>

        <!--<item name="buttonStyle">@style/CustomButton</item>-->
        <item name="colorControlNormal">?attr/secondaryBackground</item>
        <item name="android:colorControlNormal">?attr/secondaryBackground</item>
        <item name="colorControlActivated">?attr/colorAccent</item>
        <item name="android:colorControlActivated">?attr/colorAccent</item>
        <item name="colorControlHighlight">?attr/tertiaryText</item>
        <item name="android:colorControlHighlight">?attr/tertiaryText</item>
        <!--<item name="android:windowIsFloating">true</item>-->
